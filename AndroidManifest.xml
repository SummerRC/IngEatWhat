<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ing.eatwhat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
	<uses-feature android:name="android.hardware.camera" />
	<uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    

    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.ing.eatwhat.activity.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.LoadActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.RegisterActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.AddFoodActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.ing.eatwhat.activity.MainActivity" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.GuideActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.ContentActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.ForumPostActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.TimeLineActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.AboutActivity"
            android:label="@string/app_name" >
        </activity>
        
        <activity
            android:name="com.ing.eatwhat.activity.ChangePasswordActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
