<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/tv_changePw"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:background="#f6f6f6"
        android:text="修改密码"
        android:textColor="#0096ff"
        android:gravity="center"
         />

    <TextView
        android:id="@+id/tv_null"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_changePw"/>
    
       <EditText
           android:id="@+id/et_oldPassword"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/tv_null"
           android:layout_marginTop="26dp"
           android:ems="10"
           android:hint="请输入旧密码"
           android:gravity="center"
           android:inputType="textPassword"
           android:paddingLeft="10dp" />

       <EditText
           android:id="@+id/et_newPassword"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/et_oldPassword"
           android:ems="10"
           android:gravity="center"
           android:hint="请输入新密码"
           android:inputType="textPassword" />

       <EditText
           android:id="@+id/et_newPasswordAgain"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_alignParentLeft="true"
           android:layout_below="@+id/et_newPassword"
           android:ems="10"
           android:gravity="center"
           android:hint="请再次输入新密码"
           android:inputType="textPassword" />

       <Button
           android:id="@+id/bt_ok"
           android:layout_width="150dp"
           android:layout_height="41dp"
           android:layout_below="@+id/et_newPasswordAgain"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="48dp"
           android:background="@drawable/register"
           android:gravity="center"
           android:text="确认"
           android:textColor="#696464"
           android:textSize="21sp" />

</RelativeLayout>
