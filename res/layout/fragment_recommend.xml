<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/more"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"
        android:background="#f6f6f6"
        android:gravity="center_vertical|center_horizontal"
        android:text="推荐"
        android:textColor="#696464"
        android:textSize="25dp" />
    
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/more"
        android:layout_centerHorizontal="true"
        >
        <ImageButton 
       android:layout_height="wrap_content"
       android:layout_width="wrap_content"
       android:id="@+id/imageButton"        
       android:background="#00000000"    
       />
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            >
            <TextView
                android:id="@+id/draw_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"          
                android:layout_centerHorizontal="true"               
                android:text="名称："
                android:textColor="#777"
                android:textSize="25dp"
                android:textStyle="bold"
                 />
            <TextView  
                android:id="@+id/address"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="地址："
		        android:layout_below="@id/draw_name"
		        />
            <TextView  
                android:id="@+id/gongjiao"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="公交路线："
		        android:layout_below="@id/address"
		        />
            <Button 
                android:id="@+id/dianji"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="点击这里"
                android:background="#00000000"
                android:layout_alignBaseline="@+id/gongjiao"
                android:layout_toRightOf="@+id/gongjiao"
                android:textColor="#0096ff" 
                android:textSize="15dp"
                />
        </RelativeLayout>               
    </LinearLayout>
   <ImageView 
       android:id="@+id/wait"
       android:layout_height="200dp"
       android:layout_width="200dp"
       android:src="@drawable/yao_image"
       android:layout_centerHorizontal="true"
       android:layout_centerVertical="true"/>
   
   <TextView
       android:id="@+id/draw_show"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"         
       android:layout_centerHorizontal="true"               
       android:text="今天就吃TA了！"
       android:textColor="#0096ff"     
       android:textSize="20dp"
       android:textStyle="bold"  
       android:layout_below="@id/wait"  
        />  
</RelativeLayout>