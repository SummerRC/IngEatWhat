<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/more"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#f6f6f6"
        android:gravity="center_vertical|center_horizontal"
        android:text="更多"
        android:textColor="#696464"
        android:textSize="25sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ececec" >

            <Button
                android:id="@+id/bt_frag_more_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="#f6f6f6"
                android:gravity="center"
                android:text="请叫我汪海"
                android:textColor="#696464"
                android:textSize="20sp" />

            <LinearLayout
                android:id="@+id/changepw_ly"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/bt_frag_more_username"
                android:layout_marginTop="6dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/changepw" />

                <Button
                    android:id="@+id/bt_changePassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bar"
                    android:gravity="left|center_vertical"
                    android:text="修改密码"
                    android:textColor="#696464"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_ly"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/changepw_ly"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/time" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bar"
                    android:gravity="left|center_vertical"
                    android:text="时间轴"
                    android:textColor="#696464"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/update_ly"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/time_ly"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/update" />

                <Button
                    android:id="@+id/bt_frag_more_update"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bar"
                    android:gravity="left|center_vertical"
                    android:text="升级"
                    android:textColor="#696464"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gift_ly"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/update_ly"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/gift" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bar"
                    android:gravity="left|center_vertical"
                    android:text="小贴士"
                    android:textColor="#696464"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_ly"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_below="@id/gift_ly"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/about" />

                <Button
                    android:id="@+id/bt_frag_more_about"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bar"
                    android:gravity="left|center_vertical"
                    android:text="关于我们"
                    android:textColor="#696464"
                    android:textSize="20sp" />
            </LinearLayout>

            <Button
                android:id="@+id/bt_frag_more_exit"
                android:layout_width="180dp"
                android:layout_height="36dp"
                android:layout_below="@+id/about_ly"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="31dp"
                android:background="#f6f6f6"
                android:gravity="center"
                android:text="退出当前用户"
                android:textColor="#696464"
                android:textSize="16sp" />
            
        </RelativeLayout>
    </ScrollView>

</LinearLayout>